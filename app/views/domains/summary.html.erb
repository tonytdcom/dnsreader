<p id="notice"><%= notice %></p>
<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip(); 
});
</script>

<h1>Domains</h1>

     <div class="row">
        <div class="col-xs-offset=0">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th class="col-xs-3"><%= sort_link "Domain" %></th>
                  <th class="col-xs-3"><%= sort_link "Spf" %></th>
                  <th class="col-xs-3"><%= sort_link "DMARC" %></th>
                  <th class="col-xs-3"><%= sort_link "SIP" %></th>
                </tr>
              </thead
             <% @domains.each do |domain| %>

              <tbody>
                <tr>
                 <td><%= link_to domain.domain, domain_path(domain) %></td>
                  
                     <%if domain.spf.present? %>
                      <td><a href="#" data-toggle="tooltip" title="<%= domain.spf %>">SPF Present</a> </td>
                      <% else%>
                      <td> </td>
                      <% end %>
                <%if domain.dmarc.present? %>
                      <td><a href="#" data-toggle="tooltip" title="<%= domain.dmarc %>">DMARC Present</a> </td>
                      <% else%>
                      <td> </td>
                      <% end %> 
                <%if domain.sip.present? %>
                      <td><a href="#" data-toggle="tooltip" title="<%= domain.sip %>">Sip Present</a> </td>
                      <% else%>
                      <td> </td>
                      <% end %>      
                </tr>
               
              </tbody>
               <%end%>
            </table>

</div>
</div>
